                            </StackPanel>
                        </Grid>
                    </Border>


                </Grid>

            </Grid>
            <Border Grid.Row="0"
                    Background="{StaticResource BackgroundColor}"
                    CornerRadius="6,6,0,0">
                <views:TitleBar Height="25"></views:TitleBar>
            </Border>
        </Grid>
    </Border>
</Window>
